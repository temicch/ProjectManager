@model IEnumerable<ProjectManager.BLL.ViewModels.ProjectTaskViewModel>

<div class="my-3 p-3 bg-white rounded shadow-sm">
    <h3 class="flex-grow-1 flex-shrink-1 text-truncate">Tasks</h3>
    @*<div class="flex-shrink-0 flex-grow-0 mb-2">
        <a asp-action="Create" asp-controller="Tasks" class="btn btn-success btn-icon-split ">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Add</span>
        </a>
    </div>*@
</div>

<div class="table-responsive">
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th>@Html.DisplayNameFor(x => x.Author)</th>
                    <th>@Html.DisplayNameFor(x => x.Title)</th>
                    <th>@Html.DisplayNameFor(x => x.Performer)</th>
                    <th>@Html.DisplayNameFor(x => x.Comment)</th>
                    <th>@Html.DisplayNameFor(x => x.Priority)</th>
                    <th>@Html.DisplayNameFor(x => x.Status)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Id</td>
                        <td>@(item?.Author?.SimplifiedName ?? string.Empty)</td>
                        <td>@item.Title</td>
                        <td>@(item?.Performer?.SimplifiedName ?? string.Empty)</td>
                        <td>@item.Comment</td>
                        <td>@item.Priority</td>
                        <td>@item.Status</td>
                        <td class="td-actions">
                            <div class="btn-group">
                                <a class="btn btn-info btn-just-icon btn-sm m-1" title="Info" asp-controller="Tasks" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fas fa-user"></i>
                                </a>
                                @*<a class="btn btn-success btn-just-icon btn-sm m-1" title="Edit" asp-controller="Tasks" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-just-icon btn-sm m-1" title="Remove" asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa fa-times"></i>
                                </a>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <partial name="_NothingToShow" />
    }
</div>