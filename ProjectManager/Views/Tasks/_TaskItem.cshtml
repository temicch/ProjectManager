<div id="task-@Model.Id" data-priority="@((int)Model.Priority)">
    <div class="swipe-container">
        <div class="swipe-labels">
            @*@if (Model.IsAssigned)
            {
                <div class="swipe-left" style="background:darkred"><i class="fa fa-3x fa-undo"></i></div>
            }
            else
            {*@
                <div class="swipe-left" style="background:orange"><i class="fa fa-3x fa-clipboard-list"></i></div>
            @*  *@}

            <div class="swipe-right" style="background:darkgreen"><i class="fa fa-3x fa-check-circle"></i></div>
        </div>
        <div class="swipe-bar d-inline-flex justify-content-start align-items-center w-100 mw-100 " data-target="task-@Model.Id" data-left="Complete" data-id="@Model.Id">
            <i style="text-align:center;width:10%;" class="flex-shrink-0 fa"></i>
            <div class="d-flex flex-column justify-content-start flex-grow-1 flex-shrink-1 pt-1 pb-2 pr-2" style="min-width:0" role="button" data-toggle="collapse" data-target="#collapse-@Model.Id">
                <div class="d-inline-flex justify-content-between">
                    <span class="font-weight-bold text-secondary text-truncate flex-shrink-1 pr-2" style="min-width:0">@Model.Author.LastName</span>
                    @*<span class="font-weight-bold text-primary flex-shrink-0">Created: @Model..ToHumanReadable()</span>*@
                </div>
                <div class="d-inline-flex justify-content-between">
                    <span class="font-weight-bold text-secondary text-truncate flex-shrink-1 pr-2" style="min-width:0">@Model.Title</span>
                    @*<span class="font-weight-bold text-warning flex-shrink-0">@(Model.RepeatAfterCount.HasValue ? "Repeating" : "")</span>*@
                </div>
                <div class="d-inline-flex justify-content-between">
                    <span class="swipe-text text-truncate flex-shrink-1">Model.Title</span>
                    <span class="font-weight-bold flex-shrink-0">
                        <i class="fa fa-fw fa-user-clock"></i> @Model.Author.LastName
                    </span>
                </div>
            </div>
            </div>
    </div>

    <div id="collapse-@Model.Id" class="collapse" data-parent="#task-items">
        <div class="card-body">
            <div class="d-inline-flex justify-content-between align-items-baseline w-100">
                @*<span>Assignee: @(Model.AssignedUser ?? "None")</span>*@
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
            </div>
            <hr/>
            @Html.Raw(Model.Comment ?? " "))
        </div>
    </div>
</div>