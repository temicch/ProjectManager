@model IEnumerable<ProjectManager.BLL.ViewModels.ProjectViewModel>

@{
    ViewData["Title"] = "Projects";
}

<div class="my-3 p-3 bg-white rounded shadow-sm">
    <h3 class="flex-grow-1 flex-shrink-1 text-truncate">@ViewData["Title"]</h3>
    <div class="flex-shrink-0 flex-grow-0 mb-2">
        <a asp-action="Create" class="btn btn-success btn-icon-split ">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Add</span>
        </a>
    </div>
</div>

<div class="my-3 p-4 bg-white rounded shadow-sm">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var task in Model)
        {
            <partial name="_TaskItem" model="@task" /> 
        }
    }
    else
    {
        <p class="lead col-md-offset-3" >There is no projects avaiable for you.</p>
    }
</div>

